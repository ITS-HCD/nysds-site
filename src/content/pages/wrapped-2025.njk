    <script>

      // document.getElementById("nextBtn").addEventListener("click", function () {
      //   console.log("Next button clicked");
      // });

      (function () {
        const deck = document.getElementById("deck");
        const slides = Array.from(deck.querySelectorAll(".wrapped-slide"));
        const progressBar = document.getElementById("progressBar");
        const slideCounter = document.getElementById("slideCounter");

        const prevBtn = document.getElementById("prevBtn");
        const nextBtn = document.getElementById("nextBtn");
        const startBtn = document.getElementById("startBtn");
        const restartBtn = document.getElementById("restartBtn");

        const shareBtn = document.getElementById("shareBtn");
        const shareModal = document.getElementById("shareModal");
        const shareUrl = document.getElementById("shareUrl");
        const copyLinkBtn = document.getElementById("copyLinkBtn");
        const copySummaryBtn = document.getElementById("copySummaryBtn");
        const closeShareBtn = document.getElementById("closeShareBtn");

        const sizeFill = document.getElementById("sizeFill");
        const sizePct = document.getElementById("sizePct");

        let active = 0;

        function setAvailableHeight() {
          const unavHeader = document.querySelector("nys-unavheader");
          const globalHeader = document.querySelector("nys-globalheader");
          const nav = document.querySelector(".wrapped-nav");
          const toolbar = document.querySelector(".wrapped-toolbar");

          const chrome =
            (unavHeader?.getBoundingClientRect().height || 0) +
            (globalHeader?.getBoundingClientRect().height || 0) +
            (toolbar?.getBoundingClientRect().height || 0) +
            (nav?.getBoundingClientRect().height || 0);

          const available = Math.max(420, window.innerHeight - chrome);
          document.documentElement.style.setProperty("--wrapped-available-height", available + "px");
        }

        function clampIndex(i) {
          return Math.max(0, Math.min(slides.length - 1, i));
        }

        function getTitleForSlide(slideEl) {
          const h1 = slideEl.querySelector("h1");
          const h2 = slideEl.querySelector("h2");
          const title = (h1 || h2)?.textContent?.trim();
          return title || "NYSDS Wrapped 2025";
        }

        function updateHash(i) {
          const url = new URL(window.location.href);
          url.hash = "slide=" + i;
          history.replaceState(null, "", url.toString());
        }

        function readHash() {
          const hash = window.location.hash || "";
          const match = hash.match(/slide=(\d+)/);
          if (!match) return null;
          const n = Number(match[1]);
          return Number.isFinite(n) ? clampIndex(n) : null;
        }

        function updateProgress(i) {
          const current = i + 1;
          const total = slides.length;
          // progressBar.max = total;
          // progressBar.value = current;
          slideCounter.textContent = current + " / " + total;
        }

        function setControlsDisabled(i) {
          const atStart = i === 0;
          const atEnd = i === slides.length - 1;

          prevBtn.disabled = atStart;
          nextBtn.disabled = atEnd;

          // Flag active slide for animation (respects prefers-reduced-motion)
          slides.forEach((s) => s.setAttribute("data-animate", "false"));
          slides[i].setAttribute("data-animate", "true");
        }

        function showSlide(i, { focus = true } = {}) {
          const idx = clampIndex(i);
          active = idx;

          slides.forEach((s, n) => {
            s.setAttribute("data-active", n === idx ? "true" : "false");
            s.setAttribute("aria-hidden", n === idx ? "false" : "true");
          });

          updateProgress(idx);
          setControlsDisabled(idx);
          updateHash(idx);

          // Update document title for nicer sharing/bookmarking
          document.title = getTitleForSlide(slides[idx]) + " — NYSDS Wrapped 2025";

          // “Package size” visualization
          if (slides[idx].getAttribute("data-slide") === "8") {
            const startKb = 900;
            const nowKb = 480;
            const pctSmaller = Math.round(((startKb - nowKb) / startKb) * 100);
            sizePct.textContent = pctSmaller + "%";

            // Fill = now / start (smaller fill is better); animate width change
            const ratio = nowKb / startKb;
            sizeFill.style.width = Math.max(10, Math.round(ratio * 100)) + "%";
          }

          // Update share URL field
          shareUrl.value = window.location.href;

          if (focus) slides[idx].focus({ preventScroll: true });
          window.scrollTo({ top: 0, behavior: "instant" });
        }

        function next() {
          showSlide(active + 1);
        }

        function prev() {
          showSlide(active - 1);
        }

        function onAnyClick(el, handler) {
          if (!el) return;
          // el.addEventListener("click", handler); // Removing the main click listener
          el.addEventListener("nys-click", handler);
        }

        async function copyToClipboard(text) {
          try {
            await navigator.clipboard.writeText(text);
            return true;
          } catch {
            return false;
          }
        }

        function buildShareSummary() {
          return [
            "NYS Design System Wrapped 2025",
            "• 26 new components launched",
            "• 30 new Figma components",
            "• 33 releases",
            "• 204 component tests",
            "• 10 tutorial videos",
            "• 13 office hours",
            "• 240+ Teams users",
            "• 450 issues closed",
            "• 500 PRs closed",
            "• 6,000 website hits",
            "• 50,000 Figma inserts",
            "",
            "Link: " + window.location.href,
          ].join("\n");
        }

        async function openShare() {
          const url = window.location.href.split('#')[0];
          const title = "NYS Design System Wrapped 2025";
          const text = buildShareSummary();

          // Prefer native share if available
          // if (navigator.share) {
          //   try {
          //     await navigator.share({ title, text, url });
          //     return;
          //   } catch {
          //     // If user cancels, fall through to modal.
          //   }
          // }

          shareUrl.value = url;
          shareModal.open = true;
        }

        function closeShare() {
          shareModal.open = false;
        }

        // Init
        function init() {
          setAvailableHeight();

          const hashSlide = readHash();
          showSlide(hashSlide ?? 0, { focus: false });

          // Controls
          onAnyClick(nextBtn, () => next());
          onAnyClick(prevBtn, () => prev());
          onAnyClick(startBtn, () => showSlide(1));
          onAnyClick(restartBtn, () => showSlide(0));

          onAnyClick(shareBtn, () => openShare());
          onAnyClick(closeShareBtn, () => closeShare());

          onAnyClick(copyLinkBtn, async () => {
            const ok = await copyToClipboard(window.location.href.split('#')[0]);
            if (!ok) {
              shareUrl.focus();
              shareUrl.select();
            }
          });

          onAnyClick(copySummaryBtn, async () => {
            const ok = await copyToClipboard(buildShareSummary());
            if (!ok) {
              shareUrl.focus();
              shareUrl.select();
            }
          });

          // Keyboard navigation
          window.addEventListener("keydown", (e) => {
            if (shareModal?.open) return;

            if (e.key === "ArrowRight" || e.key === "PageDown") {
              e.preventDefault();
              next();
            }
            if (e.key === "ArrowLeft" || e.key === "PageUp") {
              e.preventDefault();
              prev();
            }
            if (e.key === "Home") {
              e.preventDefault();
              showSlide(0);
            }
            if (e.key === "End") {
              e.preventDefault();
              showSlide(slides.length - 1);
            }
          });

          // // Touch swipe
          // let touchX = null;
          // deck.addEventListener("touchstart", (e) => {
          //   if (!e.touches || e.touches.length !== 1) return;
          //   touchX = e.touches[0].clientX;
          // });

          // deck.addEventListener("touchend", (e) => {
          //   if (touchX === null) return;
          //   const endX = e.changedTouches?.[0]?.clientX;
          //   if (typeof endX !== "number") return;

          //   const delta = endX - touchX;
          //   touchX = null;

          //   if (Math.abs(delta) < 40) return; // threshold
          //   if (delta < 0) next();
          //   else prev();
          // });

          // Recompute available height on resize
          window.addEventListener("resize", () => {
            setAvailableHeight();
          });

          // If hash changes, update slide
          window.addEventListener("hashchange", () => {
            const n = readHash();
            if (n !== null) showSlide(n, { focus: false });
          });
        }

        init();
      })();

      const secretCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'KeyB', 'KeyA', 'Enter'];
      let pressedKeys = [];

      document.addEventListener('keydown', (event) => {
        handleKeystroke(event.code);
      });

      function handleKeystroke(key) {
        // Add the new key to the array of pressed keys
        pressedKeys.push(key);

        // Keep the array length limited to the length of the secret code
        // by slicing off the oldest keys
        pressedKeys = pressedKeys.slice(-secretCode.length);

        // Check if the current sequence of pressed keys matches the secret code
        if (JSON.stringify(pressedKeys) === JSON.stringify(secretCode)) {
            // Execute your desired function here
          document.getElementById('secret-modal').setAttribute('open', true)            
            // Optional: Reset the pressedKeys array after a successful match
            pressedKeys = []; 
        }
      }

      modalClose = () => {
        document.getElementById('secret-modal').removeAttribute('open');
      }
    </script>
