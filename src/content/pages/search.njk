{% extends "layouts/base.njk" %}

{% block content %}
<div class="nys-grid-container-widescreen">
    <div class="nys-grid-row">
        <div class="nys-desktop:nys-grid-col-8">
            <h1>Search</h1>
            <br>
           <div id="search" class="search"></div>
         
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script src="{{ site.url }}/pagefind/pagefind-ui.js"></script>
<script>
let search = new PagefindUI({ element: "#search"});

search.triggerSearch(new URLSearchParams(window.location.search).get("q") || "");
</script>

{% endblock %}