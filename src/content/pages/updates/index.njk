{% extends "layouts/base.njk" %}

{% block content %}
<div class="nys-grid-container-widescreen">
<h1>Whatʼs New</h1>
  <div class="nys-tablet:nys-grid-col-8">
    <div class="content-intro">
      <div class="content-intro__inner">  
        <p>Check out the latest updates to the New York State Design System.</p>
      </div>
    </div>
  </div>
  <div class="nys-tablet:nys-grid-col-4">
  </div>
<section class="nys-grid-row nys-grid-gap-6">
    
  <ul class="post-list nys-grid-container">
    {%- for post in collections.updates -%}
      <li class="post-list__item" style="border-bottom: 1px solid #ddd;">
        <div class="nys-grid-row nys-grid-gap">

          <!-- Left side: title and description -->
          <div class="nys-grid-col-12 nys-tablet:nys-grid-col-9">
            <h2 class="post-list__title">
              <a href="{{ post.url }}" class="post-list__link">
                {{ post.data.title }}
              </a>
            </h2>
            <div class="post-list__description">
              {{ post.data.description }}
            </div>
          </div>

          <!-- Right side: date -->
          <div class="nys-grid-col-12 nys-tablet:nys-grid-col-3" style="text-align: right;">
            <time class="post-list__kicker">
              {{ post.date | dateFull }}
            </time>
          </div>

        </div>
      </li>
    {%- endfor -%}
  </ul>

</section>

</div>
{% endblock %}

