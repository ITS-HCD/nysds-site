<div class="nys-grid-row nys-grid-gap nys-flex-align-center">
      <div class="nys-tablet:nys-grid-col-9">
      Components
    </div>
    <div class="nys-tablet:nys-grid-col-3">
      {% if image_shape %}<img src="{{ image_shape | url }}" alt="{{ title }}">{% endif %}
    </div>
</div>

  <div class="nys-grid-row nys-grid-gap">
  <div class="nys-tablet:nys-grid-col-3">
    <div  style="position:sticky; top:1rem;">
    <p><strong>On this page</strong></p>
    <nav class="inpagenav">
      <ul>
        <li class="example"><a href="#example">Example</a></li>
        <li class="examplecode"><a href="#examplecode">Example Code</a></li>
        <li class="usage"><a href="#usage">Usage</a></li>
        <li class="accessibility"><a href="#accessibility">Accessibility</a></li>
        <li class="options"><a href="#options">Options</a></li>
        <li class="properties"><a href="#properties">Properties</a></li>
        <li class="cssvariables"><a href="#cssvariables">CSS Variables</a></li>
        <li class="events"><a href="#events">Events</a></li>
      </ul>
    </nav>
    </div>
  </div>

<div class="nys-tablet:nys-grid-col-9">

  <section id="header">
    <h1>{{ title }}</h1>
    {% block longdescription %}{% endblock %}
  </section>

  <section id="example">
    {% block example %}{% endblock %}
  </section>

  <section id="examplecode">
    {% highlight "html" %}
    {% block examplecode %}{% endblock %}
    {% endhighlight %}
  </section>

  <section id="usage">
    <h2>Usage</h2>
    {% block usage %}{% endblock %}
  </section>

  <div class="nys-grid-row nys-grid-gap">
    <div class="nys-tablet:nys-grid-col-6 nys-display-flex">
      <div class="card nys-flex-fill">
        <h3 class="card__title"><nys-icon name="check_circle" size="lg"></nys-icon> Do</h3>
          {% block usagedo %}{% endblock %}
      </div>
    </div>

    <div class="nys-tablet:nys-grid-col-6 nys-display-flex">
      <div class="card nys-flex-fill">
        <h3 class="card__title"><nys-icon name="warning" size="lg"></nys-icon> Don't</h3>
          {% block usagedont %}{% endblock %}
      </div>
    </div>
  </div>

  <section id="accessibility">
    <h2>Accessibility</h2>
    {% block accessibility %}{% endblock %}
  </section>

  <section id="options">
    <h2>Options</h2>
    {% block options %}{% endblock %}
  </section>

  <section id="properties">
    <h2>Properties</h2>
    {% block properties %}{% endblock %}
  </section>

  <section id="cssvariables">
    <h2>CSS Variables</h2>
    {% block cssvariables %}{% endblock %}
  </section>

  <section id="events">
    <h2>Events</h2>
    {% block events %}{% endblock %}
  </section>

  {# <h2 id="updates">Updates</h2>
  {% block updates %}{% endblock %} #}
</div>