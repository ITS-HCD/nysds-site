<div class="nys-grid-row nys-grid-gap-lg">
  <div class="nys-desktop:nys-grid-col-3">
    <div class="navigator">
      <div class="navigator__inner">
        <div id="navigator-title" class="navigator__title">On this page</div>
        <nav class="navigator__nav" aria-labelledby="navigator-title">
          <ul class="navigator__list">
            <li class="navigator__item navigator__item--overview navigator__item--active">
              <a class="navigator__link" href="#overview">Overview</a>
            </li>
            <li class="navigator__item navigator__item--example">
              <a class="navigator__link" href="#example">Example</a>
            </li>
            <li class="navigator__item navigator__item--examplecode">
              <a class="navigator__link" href="#examplecode">Example Code</a>
            </li>
            <li class="navigator__item navigator__item--usage">
              <a class="navigator__link" href="#usage">Usage</a>
            </li>
            <li class="navigator__item navigator__item--accessibility">
              <a class="navigator__link" href="#accessibility">Accessibility</a>
            </li>
            <li class="navigator__item navigator__item--options">
              <a class="navigator__link" href="#options">Options</a>
            </li>
            <li class="navigator__item navigator__item--properties">
              <a class="navigator__link" href="#properties">Properties</a>
            </li>
            <li class="navigator__item navigator__item--cssvariables">
              <a class="navigator__link" href="#cssvariables">CSS Variables</a>
            </li>
            <li class="navigator__item navigator__item--events">
              <a class="navigator__link" href="#events">Events</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="nys-desktop:nys-grid-col-9">
    <section id="overview">
      <h1>{{ title }}</h1>
      {%- block longdescription %}{% endblock -%}
    </section>
    <section id="example">
      {%- block example %}{% endblock -%}
    </section>
    <section id="examplecode">
      <details>
        <summary>Example Code</summary>
        <div id="main-example">
      {% highlight "html" %}
      {%- block examplecode %}{% endblock -%}
      {% endhighlight %}
        </div>
      <nys-button onClick="copyFunction('main-example');" label="Copy Code" variant="outline" size="sm"></nys-button>
      </details>
    </section>
    <section id="usage">
      <h2>Usage</h2>
      {%- block usage %}{% endblock -%}
    </section>
    <div class="nys-grid-row nys-grid-gap">
      <div class="nys-tablet:nys-grid-col-6 nys-display-flex">
        <div class="card card--do nys-flex-fill">
          <h3 class="card__title"><nys-icon name="check_circle" size="lg"></nys-icon> Do</h3>
          {%- block usagedo %}{% endblock -%}
        </div>
      </div>
      <div class="nys-tablet:nys-grid-col-6 nys-display-flex">
        <div class="card card--dont nys-flex-fill">
          <h3 class="card__title"><nys-icon name="warning" size="lg"></nys-icon> Don't</h3>
          {%- block usagedont %}{% endblock -%}
        </div>
      </div>
    </div>
    <section id="accessibility">
      <h2>Accessibility</h2>
      {%- block accessibility %}{% endblock -%}
    </section>
    <section id="options">
      <h2>Options</h2>
      {%- block options %}{% endblock -%}
    </section>
    <section id="properties">
      <h2>Properties</h2>
      {%- block properties %}{% endblock -%}
    </section>
    <section id="cssvariables">
      <h2>CSS Variables</h2>
      {%- block cssvariables %}{% endblock -%}
    </section>
    <section id="events">
      <h2>Events</h2>
      {%- block events %}{% endblock -%}
    </section>
  {# <h2 id="updates">Updates</h2>
  {%- block updates %}{% endblock -%} #}
  </div>
</div>
