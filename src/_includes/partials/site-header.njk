<div class="site-header">
    <div class="site-header__inner nys-grid-container">
        <div class="site-header__logo">
            <a href="{{site.url}}" title="Home"><img src="{{ '/assets/img/logo-excelsior.svg' | url }}" title="Excelsior Logo"></a>
        </div>
        <nav class="site-header__nav">
            <ul>
                <li><a href="{{ '/getting-started' | url }}" title="Getting Started">Getting Started</a></li>
                <li><a href="{{ '/foundations' | url }}" title="Foundations">Foundations</a></li>
                <li><a href="{{ '/components' | url }}" title="Components">Components</a></li>
                <li><a href="{{ '/about' | url }}" title="About">About</a></li>
            </ul>
        </nav>

        
    </div>
</div>

{% if section %}
<div class="section-header">
    <div class="section-header__inner nys-grid-container">
        <div class="section-header__title">
            Components
        </div>
        <div class="section-header__media">
            {% if image_header %}
                <img src="{{ image_header | url }}" alt="{{ title }}">
            {% else %}
                <img src="/assets/img/sections/section-{{ section | slug }}.svg" alt="{{ section }} section header">
            {% endif %}
        </div>
    </div>
</div>
{% endif %}

