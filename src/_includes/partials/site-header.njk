<nys-globalheader appName="NYS Design System" homepageLink="/">
  <ul>
    <li class="site-header__item{% if section == 'Getting Started' %} site-header__item--active{% endif %}"><a href="{{ '/get-started' | url }}" class="site-header__link" title="Get Started">Get Started</a></li>
    <li class="site-header__item{% if section == 'Foundations' %} site-header__item--active{% endif %}"><a href="{{ '/foundations' | url }}" class="site-header__link" title="Foundations">Foundations</a></li>
    <li class="site-header__item{% if section == 'Components' %} site-header__item--active{% endif %}"><a href="{{ '/components' | url }}" class="site-header__link" title="Components">Components</a></li>
    <li class="site-header__item{% if section == 'Learn' %} site-header__item--active{% endif %}"><a href="{{ '/learn' | url }}" class="site-header__link" title="NYS Design System Video Series">Learn</a></li>
    <li class="site-header__item{% if section == 'Updates' %} site-header__item--active{% endif %}"><a href="{{ '/updates' | url }}" class="site-header__link" title="Whatʼs New">Whatʼs New</a></li>
    <li class="site-header__item{% if section == 'Search' %} site-header__item--active{% endif %}"><a href="{{ '/search' | url }}" class="site-header__link" title="Search this website">Search</a></li>
  </ul>
</nys-globalheader>

{% if section %}
<div class="section-header">
    <div class="section-header__inner nys-grid-container-widescreen">
        <div class="section-header__title">
            {{ section }}
        </div>
        <div class="section-header__media">
            {% if image_header %}
                <img src="{{ image_header | url }}" alt="{{ title }}">
            {% else %}
                <img src="{{ site.url | url }}/assets/img/sections/section-{{ section | slug }}.svg" alt="{{ section }} section header">
            {% endif %}
        </div>
    </div>
</div>
{% endif %}
